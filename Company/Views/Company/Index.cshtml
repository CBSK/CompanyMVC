@model IEnumerable<Company.Models.Models.CompanyTBL>

@{
    ViewBag.Title = "List of Companies";
    Layout = "~/Views/Shared/_OurLayout.cshtml";
}

<!-- RIBBON -->

<div id="content">

    <div class="row">

        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
        </div>
    </div>

    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2> List of Companies </h2>
                    </header>
                        <div id="createDiv">

                        </div>

                        <div class="col-sm-1" style="padding-bottom:20px;">
                            <input type="button" class="btn btn-success" value="Add New Company" onclick="createComp()" />
                        </div>
                
                        <div>
                            <div class="table-responsive">
                                <div id="divlist">
                                    <table id="list" class="table table-striped table-bordered display company" width="100%">

                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Address)
                                                </th>
                                                <th>
                                                    City Code
                                                </th>
                                                <th>
                                                    Comp. Code
                                                </th>
                                                <th>
                                                    Cont. Code
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Name)
                                                </th>
                                                <th>
                                                    State
                                                </th>
                                                <th>&nbsp;Action&nbsp;</th>
                                            </tr>

                                            <tr id="filterrow">
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Address)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.CityCode)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.CompanyId)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.CountryCode)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Name)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.StateCode)
                                                </th>
                                                <th>T</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Address)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CityCode)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CompanyId)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CountryCode)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.StateCode)
                                                    </td>
                                                    @{
                                                        var s = "/Company/Edit?id=" + @item.id;
                                                        var s1 = "/Company/Delete?id=" + @item.id;
                                                        var s2 = "/Company/Details?id=" + @item.id;

                                                    }

                                                    <td width="70px;">
                                                        <div class="btn-group">
                                                            <a data-original-title="Edit" href='@s' title="">
                                                                <i class="fa fa-pencil-square-o"></i>
                                                            </a>
                                                        </div>
                                                        &nbsp;
                                                        <div class="btn-group">
                                                            <a data-original-title="Delete" href='@s1' title="Delete"><i class="fa fa-trash-o"></i></a>
                                                        </div>
                                                        &nbsp;
                                                        <div class="btn-group">
                                                            <a data-original-title="View" onclick='loadDepts("@item.id")' title="View"><i class="fa fa-eye"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        
                </div>
            </article>
        </div>
    </section>
</div>

<div id="deptTable"></div>
<script>

    function loadDepts(guid) {

        $('#deptTable').load('/Company/DeptDetailsView?id=' + guid);

    }
    function createComp() {
        $('#createDiv').show();
        $('#createDiv').load('/Company/CreatePartial');
    }

    $(document).ready(function () {
        
        $('#createDiv').hide();
    });

</script>